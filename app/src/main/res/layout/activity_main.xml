<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.github.ybq.android.spinkit.SpinKitView
        android:padding="16dp"
        android:id="@+id/progress_bar"
        style="@style/SpinKitView.Small.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/btn_dialogbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_progess_bar"
        app:layout_constraintBottom_toTopOf="@+id/btn_progressbar_ChasingDots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_progressbar_ChasingDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_dialog_chasingdots"
        app:layout_constraintBottom_toTopOf="@+id/btn_progressbar_CubeGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dialogbar" />

    <Button
        android:id="@+id/btn_progressbar_CubeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_dialog_chasingdots"
        app:layout_constraintBottom_toTopOf="@+id/btn_progressbar_FoldingCube"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_progressbar_ChasingDots" />

    <Button
        android:id="@+id/btn_progressbar_FoldingCube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/progress_dialog_foldingcube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_progressbar_CubeGrid" />

</androidx.constraintlayout.widget.ConstraintLayout>